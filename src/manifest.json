{
  "manifest_version": 3,
  "name": "mushokuWalk",
  "version": "1.0",
  "description": "無色透名祭を徘徊するのに役立つ拡張機能",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.nicovideo.jp/watch/*"],
      "css": ["styles/menu.css"],
      "js": ["index.js", "addLink.js", "getLink.js", "goNext.js", "checkLinks/index.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "checkLinks.html", "styles/checkLinks.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
